@model ChemistShopSite.Models.Medicament

@{
    ViewData["Title"] = "Edit medicament";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="MedicamentName" class="control-label">Medicament Name</label>
        <input type="text" asp-for="MedicamentName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer" class="control-label">Manufacturer</label>
        <input type="text" asp-for="Manufacturer" class="form-control" />
    </div>
    <div class="form-group">
         <select name="Storage">
         {
                @{
                    List<String> list = (List<String>)ViewData["storages"];
                    foreach (var item in list)
                    {
                        if(Model.Storage == item)
                        {
                            <option value=@item selected>@item</option>
                        }
                        else
                        {
                            <option value=@item>@item</option>
                        }
                    }
                }
          }
         </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
}
