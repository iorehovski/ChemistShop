@model ChemistShopSite.Models.Reception

@{
    ViewData["Title"] = "Edit Reception";
}


@using (Html.BeginForm("Edit", "Reception", FormMethod.Post))
{
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="ReceiptDate" class="control-label">Receipt Data</label>
        @{ 
            DateTime tmp = Convert.ToDateTime(Model.ReceiptDate);
            string n = tmp.ToString("yyyy-MM-dd");
        }
        <input type="date" asp-for="ReceiptDate" class="form-control" value="@n" />
    </div>
    <div class="form-group">
        <label asp-for="Count" class="control-label">Count</label>
        <input type="text" asp-for="Count" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OrderCost" class="control-label">Order Cost</label>
        <input type="text" asp-for="OrderCost" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
}